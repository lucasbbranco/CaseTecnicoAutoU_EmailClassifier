{
  "version": 2,
  "name": "email-classifier",
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "GROQ_API_KEY": "@groq_api_key"
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11"
    }
  }
}